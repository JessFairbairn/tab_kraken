{

  "manifest_version": 2,
  "name": "Tab Overview",
  "version": "1.0",

  "description": "Helps sort your tabs",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "browser_action": {
    "default_icon": "icons/button.svg",
    "default_title": "Open Tab Overview"
  },

  "background": {
    "scripts": ["external/browser-polyfill.min.js", "background.js"]
  },

  "permissions": ["tabs", "activeTab"]

}
